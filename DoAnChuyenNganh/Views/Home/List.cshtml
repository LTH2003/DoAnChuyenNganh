@model IList<DoAnChuyenNganh.Models.view_Post_Menu>
@using DoAnChuyenNganh.Utilities;

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex">
            @foreach(var item in Model)
            {
                string url = Functions.TitleSlugGeneration("post", item.Title, item.PostID);
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry justify-content-end">
                        <img href="blog-single.html" class="block-20" src="@item.Images" alt=""></img>
                        <div class="text mt-3 float-right d-block">
                            <h3 class="heading"><a href="/@url">@item.Title</a></h3>
                            <p>@item.Abstract</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        <li><a href="#">&lt;</a></li>
                        <li class="active"><span>1</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">&gt;</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
