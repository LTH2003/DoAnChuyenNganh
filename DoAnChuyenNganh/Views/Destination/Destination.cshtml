@model IList<DoAnChuyenNganh.Models.SanPham>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center pb-4">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h2 class="mb-4">CÁC ĐỊA ĐIỂM ĐƯỢC YÊU THÍCH</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 ftco-animate">
                <div class="project-destination">
                    <a href="#" class="img" style="background-image: url(images/nghean.jpg);">
                        <div class="text">
                            <h3>Nghệ An</h3>
                            <span>8 Tours</span>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-md-3 ftco-animate">
                <div class="project-destination">
                    <a href="#" class="img" style="background-image: url(images/nhatrang.jpg);">
                        <div class="text">
                            <h3>Nha Trang</h3>
                            <span>2 Tours</span>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-md-3 ftco-animate">
                <div class="project-destination">
                    <a href="#" class="img" style="background-image: url(images/hanoi.jpg);">
                        <div class="text">
                            <h3>Hà Nội</h3>
                            <span>5 Tours</span>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-md-3 ftco-animate">
                <div class="project-destination">
                    <a href="#" class="img" style="background-image: url(images/tphcm.jpg);">
                        <div class="text">
                            <h3>TP Hồ Chí Minh</h3>
                            <span>5 Tours</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pb ftco-no-pt">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-5">
                <div class="search-wrap-1 search-wrap-notop ftco-animate p-4">
                    <form action="#" class="search-property-1">
                        <div class="row">
                            <div class="col-lg align-items-end">
                                <div class="form-group">
                                    <label for="#">Điểm đến</label>
                                    <div class="form-field">
                                        <div class="icon"><span class="ion-ios-search"></span></div>
                                        <input type="text" class="form-control" placeholder="Tìm kiếm điểm đến">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg align-items-end">
                                <div class="form-group">
                                    <label for="#">Ngày nhận</label>
                                    <div class="form-field">
                                        <div class="icon"><span class="ion-ios-calendar"></span></div>
                                        <input type="text" class="form-control checkin_date" placeholder="Ngày nhận">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg align-items-end">
                                <div class="form-group">
                                    <label for="#">Ngày trả</label>
                                    <div class="form-field">
                                        <div class="icon"><span class="ion-ios-calendar"></span></div>
                                        <input type="text" class="form-control checkout_date" placeholder="Ngày trả">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg align-items-end">
                                <div class="form-group">
                                    <label for="#">Giới hạn giá</label>
                                    <div class="form-field">
                                        <div class="select-wrap">
                                            <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                            <select name="" id="" class="form-control">
                                                <option value="">$5,000</option>
                                                <option value="">$10,000</option>
                                                <option value="">$50,000</option>
                                                <option value="">$100,000</option>
                                                <option value="">$200,000</option>
                                                <option value="">$300,000</option>
                                                <option value="">$400,000</option>
                                                <option value="">$500,000</option>
                                                <option value="">$600,000</option>
                                                <option value="">$700,000</option>
                                                <option value="">$800,000</option>
                                                <option value="">$900,000</option>
                                                <option value="">$1,000,000</option>
                                                <option value="">$2,000,000</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg align-self-end">
                                <div class="form-group">
                                    <div class="form-field">
                                        <input type="submit" value="Search" class="form-control btn btn-primary">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="ftco-section ftco-no-pt">
    <div class="container">
        <div class="row justify-content-center pb-4">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h2 class="mb-4">ĐIỂM ĐẾN DU LỊCH</h2>
            </div>
        </div>
        <div class="row flex-nowrap">
            @foreach (var item in Model)
            {
                <div class="col-md-4 ftco-animate border mx-1 px-0">
                    <img href="#" class="img-fluid w-100" src="@item.AnhTour"></img>
                    <div class="text p-4">
                        <span class="price text-center d-block bg-warning rounded-pill w-75 mx-auto p-3 font-weight-bold text-dark">@item.Price / Persons</span>
                        <a class="days d-block">@item.TimeTour</a>
                        <h3><a href="#">@item.TenTour</a></h3>
                        <p class="location"><a class="ion-ios-map"></a>@item.DiaDiem</p>
                        <ul class="pl-0">
                            <li class="list-unstyled float-left"><a class="flaticon-shower"></a>@item.PhongTam</li>
                            <li class="list-unstyled float-left px-3"><a class="flaticon-king-size"></a>@item.PhongNgu</li>
                            <li class="list-unstyled float-left"><a class="flaticon-mountains"></a>@item.KhuVuc</li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</section>