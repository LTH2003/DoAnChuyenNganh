@model DoAnChuyenNganh.Models.Menu

@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid">
    <h1>Chỉnh sửa Menu</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MenuID" />
                <div class="form-group">
                    <label asp-for="MenuName" class="control-label"></label>
                    <input asp-for="MenuName" class="form-control" />
                    <span asp-validation-for="MenuName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsActive" class="control-label"></label>
                    <input asp-for="IsActive" class="form-control" />
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ControllerName" class="control-label"></label>
                    <input asp-for="ControllerName" class="form-control" />
                    <span asp-validation-for="ControllerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ActionName" class="control-label"></label>
                    <input asp-for="ActionName" class="form-control" />
                    <span asp-validation-for="ActionName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Levels" class="control-label"></label>
                    <input asp-for="Levels" class="form-control" />
                    <span asp-validation-for="Levels" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ParentID" class="control-label"></label>
                    <input asp-for="ParentID" class="form-control" />
                    <span asp-validation-for="ParentID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Link" class="control-label"></label>
                    <input asp-for="Link" class="form-control" />
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MenuOrder" class="control-label"></label>
                    <input asp-for="MenuOrder" class="form-control" />
                    <span asp-validation-for="MenuOrder" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="control-label"></label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Edit" class="btn btn-primary"/>
                        <i class="fa fa-check"></i>Xác nhận
                    </button>
                    <a asp-action="Menu" class="btn btn-lg btn-warning mr-5"><i class="fa fa-arrow-left"></i> Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>


