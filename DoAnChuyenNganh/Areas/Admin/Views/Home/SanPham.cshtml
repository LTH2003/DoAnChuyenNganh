@model IEnumerable<DoAnChuyenNganh.Models.SanPham>
@using DoAnChuyenNganh.Models;
@{
    ViewData["Title"] = "SanPham";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
    <h1>Sản phẩm</h1>
    <p>
        <a asp-action="CreateSP" class="btn btn-success btn-sm"><span class="d-block text-white w-100"></span>Thêm mới</a>
    </p>
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr class="table-warning">
                <th>
                    @Html.DisplayNameFor(model => model.TenTour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnhTour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeTour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiaDiem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhongTam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhongNgu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KhuVuc)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-success">
                    <td>
                        @Html.DisplayFor(modelItem => item.TenTour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnhTour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeTour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaDiem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhongTam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhongNgu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KhuVuc)
                    </td>
                    <td>
                        <a asp-area="Admin" asp-controller="Home" asp-action="EditSP" asp-route-id="@item.MaTour" class="btn btn-info btn-sm" title="Sửa"><span class="d-block text-white w-25"></span>Sửa</a>
                        <a asp-area="Admin" asp-controller="Home" asp-action="DeleteSP" asp-route-id="@item.MaTour" class="btn btn-danger btn-sm bg-danger" title="Xoá"><span class="d-block text-white w-25"></span>Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

