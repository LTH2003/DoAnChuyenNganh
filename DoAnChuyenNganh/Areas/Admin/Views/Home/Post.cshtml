@model IEnumerable<DoAnChuyenNganh.Models.Post>
@using DoAnChuyenNganh.Models;

@{
    ViewData["Title"] = "Post";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="container-fluid">
    <h1>Bài viết</h1>

    <p>
        <a asp-action="CreatePost" class="btn btn-success btn-sm"><span class="d-block text-white w-100">Thêm mới</a>
    </p>
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr class="table-warning">
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Abstract)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contents)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Images)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                
                @* <th>
                    @Html.DisplayNameFor(model => model.PostOrder)
                <th>
                    @Html.DisplayNameFor(model => model.MenuID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th> *@
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-dark" style="color: red;">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abstract)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contents)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Images)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    @* <td>
                        @Html.DisplayFor(modelItem => item.PostOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MenuID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td> *@
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-area="Admin" asp-controller="Home" asp-action="EditPost" asp-route-id="@item.PostID" class="btn btn-info btn-sm" title="Sửa"><span class="d-block text-white w-25">Sửa</a>
                        <a asp-area="Admin" asp-controller="Home" asp-action="DeletePost" asp-route-id="@item.PostID" class="btn btn-danger btn-sm bg-danger" title="Xoá"><span class="d-block text-white w-25">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

