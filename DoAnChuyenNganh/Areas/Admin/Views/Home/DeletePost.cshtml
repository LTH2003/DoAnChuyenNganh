@model DoAnChuyenNganh.Models.Post

@{
    ViewData["Title"] = "DeletePost";
}
<div class="container-fluid">
    <h1>Xác nhận xóa bài viết?</h1>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Abstract)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Abstract)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Contents)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contents)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Images)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Images)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Author)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsActive)
            </dd>
        </dl>

        <form asp-action="DeletePost" method="post">
            <input type="hidden" asp-for="PostID" />
            <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
                <i class="fa fa-arrow-alt-circle-left"></i> Quay lại
            </a>
            <button type="submit" value="Delete" class="btn btn-danger">
                <i class="fa fa-trash"></i> Xóa Post
            </button>
        </form>
    </div>
</div>

