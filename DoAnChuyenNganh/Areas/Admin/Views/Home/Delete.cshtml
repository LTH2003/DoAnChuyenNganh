@model DoAnChuyenNganh.Models.Menu

@{
    ViewData["Title"] = "Delete";
}
<div class="container-fluid"
    <h1>Xác nhận xóa Menu?</h1>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.MenuName)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.MenuName)
            </dd>
            <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.IsActive)
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="MenuID" />
            <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()"><i class="fa fa-arrow-alt-circle-left"></i> Quay lại
            </a>
            <button type="submit" value="Delete" class="btn btn-danger"/>
                <i class="fa fa-trash"></i> Xóa Menu
            </button>
        </form>
    </div>
</div>

