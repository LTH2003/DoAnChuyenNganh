@model IEnumerable<DoAnChuyenNganh.Models.Menu>
@using DoAnChuyenNganh.Models;

@{
    ViewData["Title"] = "Menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="container-fluid">
    <h1>Danh sách Menu</h1>

    <p>
        <a asp-action="Create" class="btn btn-success btn-sm"><span class="d-block text-white w-100">Thêm mới</a>
    </p>
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr class="table-warning">
                <th>
                    @Html.DisplayNameFor(model => model.MenuName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ControllerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ActionName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Levels)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParentID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Link)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MenuOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-success">
                    <td>
                        @Html.DisplayFor(modelItem => item.MenuName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ControllerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Levels)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MenuOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        <a asp-area="Admin" asp-controller="Home" asp-action="Edit" asp-route-id="@item.MenuID" class="btn btn-info btn-sm" title="Sửa"><span class="d-block text-white w-25">Sửa</a>
                        <a asp-area="Admin" asp-controller="Home" asp-action="Delete" asp-route-id="@item.MenuID" class="btn btn-danger btn-sm bg-danger" title="Xoá"><span class="d-block text-white w-25">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

